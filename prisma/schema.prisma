generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Product {
  id        String       @id @default(cuid())
  url       String       @unique
  title     String
  image     String
  platform  String       // âœ… Add this back
  createdAt DateTime     @default(now())
  prices    PriceHistory[]
}



model PriceHistory {
  id        String   @id @default(cuid())
  product   Product  @relation(fields: [productId], references: [id])
  productId String
  price     Float
  createdAt DateTime @default(now())
}
